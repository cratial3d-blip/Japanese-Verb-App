{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/conjugation_templates.schema.json",
  "title": "ConjugationTemplates",
  "type": "array",
  "minItems": 1,
  "maxItems": 100,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "label",
      "politeness",
      "category",
      "active"
    ],
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1,
        "maxLength": 60,
        "pattern": "^[a-z0-9_]+$"
      },
      "label": {
        "type": "string",
        "minLength": 1,
        "maxLength": 80
      },
      "politeness": {
        "type": "string",
        "enum": [
          "plain",
          "polite"
        ]
      },
      "category": {
        "type": "string",
        "enum": [
          "dictionary",
          "negative",
          "past",
          "past_negative",
          "te_form",
          "aspect",
          "desire",
          "permission",
          "prohibition",
          "request",
          "volitional",
          "potential"
        ]
      },
      "active": {
        "type": "boolean"
      },
      "notes": {
        "type": [
          "string",
          "null"
        ],
        "maxLength": 200
      },
      "conjugation_level": {
        "type": "string",
        "enum": [
          "N5",
          "N4",
          "unknown"
        ]
      },
      "family_id": {
        "type": "string",
        "minLength": 1,
        "maxLength": 80,
        "pattern": "^[a-z0-9_]+$"
      },
      "family_label": {
        "type": "string",
        "minLength": 1,
        "maxLength": 120
      },
      "family_sort_order": {
        "type": "integer",
        "minimum": 0,
        "maximum": 10000
      },
      "sort_order": {
        "type": "integer",
        "minimum": 0,
        "maximum": 10000
      },
      "guided_stage": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100
      },
      "genki_stage": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100
      },
      "tags": {
        "type": "array",
        "minItems": 0,
        "maxItems": 20,
        "items": {
          "type": "string",
          "minLength": 1,
          "maxLength": 40
        }
      }
    }
  }
}
